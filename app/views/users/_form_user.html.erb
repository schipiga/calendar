<%= form_for(@user) do |f| %>
  <%= f.text_field :fio, :class => 'profile_element' %>
  <%= f.text_field :email, :class => 'profile_element' %>
  <%= f.password_field :password, :class => 'profile_element' %>
  <%= f.password_field :password_confirmation, :class => 'profile_element' %>
  <%= f.submit 'Save', :class => 'profile_element' %>
<% end %>
