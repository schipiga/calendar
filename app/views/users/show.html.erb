<%= content_for :head do %>
  Your office!
<% end %>

<!-- Hidden field for current date -->
<input type='hidden' id='cur_date' />

<!-- Page -->
<div class='content'>
  <div class='left_column'>
    <div class='profile'>
      <%= render 'form_user' %>
    </div>
  </div>
  <div class='middle_column'>
    <div class='event_buttons'>
      <input type='button' id='my_events' value='My events' />
      <input type='button' id='all_events' value='All events' />
    </div>
    <div id='calendar' class='calendar'></div>
  </div>
  <div class='right_column'>
    <a href='<%= session_path %>' data-method='delete'><div class='exit' title='Exit'></div></a>
  </div>
</div>

<!-- Events list -->
<div class='events_list'>
  <div class='events_list_back'>
  </div>
  <div class='events_list_container'>
    <div class='events_list_form'>
      <div class='events_list_header'>
        <input type='button' id='events_list_add' class='events_list_add' tag=
              '<%= new_user_event_path(@user) + '.js' %>' value='Add event' />
        <div id='events_list_close' class='events_list_close btn_close'></div>
      </div>
      <div id='events_list_content' class='events_list_content'>
      </div>
    </div>
  </div>
</div>

<!-- My/all events list -->
<div class='all_events'>
  <div class='events_list_back'>
  </div>
  <div class='events_list_container'>
    <div class='all_events_form'>
      <div class='all_events_header'>
        <span class='all_events_name'>Title</span>
        <div id='all_events_close' class='all_events_close btn_close'></div>
      </div>
      <div id='all_events_content' class='all_events_content'>
      </div>
    </div>
  </div>
</div>

<!-- Event -->
<div class='event'>
  <div class='event_back'>
  </div>
  <div class='event_container'>
    <div class='event_form'>
    </div>
  </div>
</div>

<!-- Show event -->
<div class='show_event'>
  <div class='show_event_back'>
  </div>
  <div class='show_event_container'>
    <div class='show_event_form'>
    </div>
  </div>
</div>

<!-- Message -->
<div class='message'>
  <div class='message_container'>
    <div class='message_form'>
      <div class='message_image'></div>
      <div id='message_text' class='message_text'></div>
      <div id='message_close' class='message_close'>x</div>
    </div>
  </div>
</div>
