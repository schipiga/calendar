<%= form_for([@user, @user.events.new]) do |f| %>
<div class='new_event_div_title'>
<%= f.text_field :title, :placeholder => 'Title', :class => 'new_event_title' %>
<input type='button' id='close_new_event' class='new_event_close' value='Close' />
</div>
<%= f.text_area :description, :placeholder => 'Description', :class => 'new_event_description' %>
<div class='new_event_div_point_date'>
<%= f.text_field :point_date, :id => 'point_date' %>
</div>
<div class='new_event_div_is_share'>
<%= f.check_box :is_share, :id => 'is_share', :class => 'is_share' %>Available for public viewing?
</div>
<div class='new_event_div_is_cycle'>
<%= f.check_box :is_cycle, :id => 'is_cycle', :class => 'is_cycle' %>Repeat event?
</div>
<div class='new_event_div_cycle'>
<%= f.radio_button :cycle, 'daily', :class => 'cycle', :disabled => '' %>Daily
<%= f.radio_button :cycle, 'weekly', :class => 'cycle', :disabled => '' %>Weekly
<%= f.radio_button :cycle, 'monthly', :class => 'cycle', :disabled => '' %>Monthly
<%= f.radio_button :cycle, 'yearly', :class => 'cycle', :disabled => '' %>Yearly
</div>
<%= f.submit 'Save'%>
<% end %>
