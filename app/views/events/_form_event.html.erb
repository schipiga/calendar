<%= form_for [current_user, @event], :html => {:id => 'event_form'} do |f| %>
<div class='event_header'>
<%= f.text_field :title, :placeholder => 'Title', :class => 'event_title' %>
<input type='button' id='event_close' class='event_close' value='Close' />
</div>
<%= f.text_area :description, :placeholder => 'Description', :class => 'event_description' %>
<div class='event_point_date'>
<%= f.text_field :point_date %>
</div>
<div class='event_is_share'>
<%= f.check_box :is_share %>Available for public viewing?
</div>
<div class='event_is_cycle'>
<%= f.check_box :is_cycle %>Repeat event?
</div>
<div class='event_div_cycle'>
<%= f.radio_button :cycle, 'daily', :class => 'event_cycle' %>Daily
<%= f.radio_button :cycle, 'weekly', :class => 'event_cycle' %>Weekly
<%= f.radio_button :cycle, 'monthly', :class => 'event_cycle' %>Monthly
<%= f.radio_button :cycle, 'yearly', :class => 'event_cycle' %>Yearly
</div>
<%= f.submit 'Save', :id => 'event_submit' %>
<% end %>
